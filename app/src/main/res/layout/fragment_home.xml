<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Presentation.Fragments.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/catPekarny"
                style="@style/MyButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/bakery"
                tools:ignore="VisualLintButtonSize" />

            <Button
                android:id="@+id/catFasfud"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/fast_food"
                style="@style/MyButtonStyle"
                tools:ignore="VisualLintButtonSize" />

            <Button
                android:id="@+id/catAziat"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/Aziat_kitchen"
                style="@style/MyButtonStyle"
                tools:ignore="VisualLintButtonSize" />

            <Button
                android:id="@+id/catSupi"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                style="@style/MyButtonStyle"
                android:text="@string/soups"
                tools:ignore="VisualLintButtonSize" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>